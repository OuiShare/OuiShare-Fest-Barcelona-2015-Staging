  .container
    .row.centered
      %h3.ouishare_stencil.white
        = t('dynamic_translations.press.title')
      %hr.white
      %br

    #myCarousel.carousel.slide.col-xs-12.col-md-offset-1.col-lg-offset-2.col-md-10.col-lg-8{ 'data-ride' => "carousel"}

      /Wrapper for slides
      .carousel-inner
        .item.active
          .press-content
            .press-text
              %h3.naiv
                = t('dynamic_translations.press.quote1')
          .label-press
            = t('dynamic_translations.press.quote1_source')
        .item
          .press-content
            .press-text
