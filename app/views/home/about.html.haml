        .item
          .press-content
            .press-text
              %h3.naiv
                = t('dynamic_translations.press.quote3')
          .label-press
            = t('dynamic_translations.press.quote3_source')
        .item
          .press-content
            .press-text
              %h3.naiv
                = t('dynamic_translations.press.quote4')
          .label-press
            = t('dynamic_translations.press.quote4_source')
        .item
          .press-content
            .press-text
              %h3.naiv
                = t('dynamic_translations.press.quote5')
          .label-press
            = t('dynamic_translations.press.quote5_source')

      %img.quote-left-carousel{:src => '/assets/quote_left.png', :alt => 'quote left'}
      %img.quote-right-carousel{:src => '/assets/quote_left.png', :alt => 'quote right'}
      / Controls
      %a.left.carousel-control{:href => "#myCarousel", 'data-slide' => "prev"}
        &lsaquo;

      %a.right.carousel-control{:href => "#myCarousel", 'data-slide' => "next" }
        &rsaquo;



