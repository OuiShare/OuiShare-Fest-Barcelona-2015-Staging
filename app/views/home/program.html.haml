.blank_bg#_track_leaders{:style => "padding-bottom: 10px;"}
  .container
    / TRACK LEADRES
    .row.centered
      %h3.ouishare_stencil.pink
        =t('dynamic_translations.track_leaders.title')
      %hr.pink
      - if !@track_leaders.blank?
        .ch-grid
          - @track_leaders.each do |track_leader|
            .col-lg-3.individuals-list-display
              %li
                = render "/individuals/partials/track_leaders_display", :track_leader => track_leader

 
