.program-part#_schedule
  .container
    / SCHEDULE
    .main-section
      .row
        .col-md-10.col-md-offset-1
          %h3.ouishare_stencil
            = t('dynamic_translations.program.schedule_title')
          %hr.pink
        .col-md-8.col-md-offset-2
          %p.main-section-paragraphes
            = t('dynamic_translations.program.schedule_text')

      .row.centered
        %a#sched-embed{:href => "http://ouisharefest2015.sched.org/grid/"}
        %script{:type => "text/javascript", :src => "http://ouisharefest2015.sched.org/js/embed.js"}



